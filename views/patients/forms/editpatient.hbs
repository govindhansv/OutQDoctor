<div class="center">

    <div class="">

        <div
            class=" p-4 w-full max-w-sm bg-white rounded-lg shadow-md sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
            <div class="space-y-6">
                <h5 class="text-xl font-medium text-gray-900 dark:text-white">Edit Patient Details</h5>
                <form action="/patients/edit/" method="post">

                    <div>
                        <label for="pname" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Patient Name</label>
                        <input type="text" name="name" id="name" value="{{data.name}}"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            placeholder="Name..." required="">
                    </div>

                    <div>
                        <label for="gender" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Gender
                        </label>
                        <select  name="gender" id="gender"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white">
                            <option value="{{data.gender}}">{{data.gender}}</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div>
                        <label for="age" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Age</label>
                        <input type="number" name="age" id="age" value="{{data.age}}"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            placeholder="800" required="">
                    </div>
                    {{!-- <img class="p-8 rounded-t-lg" id="imgview" src="{{data.image}}" alt="{{data.image}}"> --}}
                    <div>
                        <label for="blood" class="block mb-3 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Blood Group</label>
                        <input type="text" name="blood" id="blood" value="{{data.blood}}"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            placeholder="A+ ve" required="">
                    </div>
                    <div>
                        <label for="location" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Location </label>
                        <input type="text" name="location" id="location" value="{{data.location}}"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            placeholder="Location" required="">
                    </div>
                    <div>
                        <label for="details" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Other Details </label>
                        <textarea type="text" name="details" id="details" cols="40" value="{{data.details}}"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            placeholder="Describe about your health condition ">{{data.details}}</textarea>
                    </div>
                    <div>
                        <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Email</label>
                        <input type="email" name="gmail" id="email" value="{{data.gmail}}"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            placeholder="name@company.com" required="">
                    </div>
                    <div>
                        <label for="phone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Phone No</label>
                        <input type="number" name="phone" id="phone" placeholder="8086457845" value="{{data.phone}}"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            required="">
                    </div>

                    {{!-- <div>
                        <label for="image" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">
                            Change Image</label>

                        <input type="file" name="image" id="image" onchange="preview(event)"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                            placeholder="800">
                    </div> --}}
                    <input type="text" name="id" id="id" hidden value="{{data._id}}" />

                    <button type="submit"
                        class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Edit Product </button>
                </form>


            </div>
        </div>
    </div>

</div>

<script>
    function preview(e) {
        console.log(e)
        document.getElementById('imgview').src = URL.createObjectURL(e.target.files[0])
    }
    let image;



    $("button").click(async function () {
        let image = await updateImageDisplay();

        let name = document.getElementById('name').value;
        let age = document.getElementById('age').value;
        let gender = document.getElementById('gender').value;
        let id = document.getElementById('id').value;

        console.log(name, age, gender, id);


        $.post("/patients/edit/",
            {
                gender: gender, age: age, name: name, image: image, id: id
            },
            function () {
                alert('added');
                window.location = "http://localhost:3000/patients/";
            });

    });


    const input = document.getElementById('image');


    async function updateImageDisplay() {

        const curFiles = input.files;
        for (const file of curFiles) {

            const data = new FormData()
            data.append("file", file)
            data.append("upload_preset", "e-commerce")
            data.append("cloud_name", "gbrozdev")
            await fetch("https://api.cloudinary.com/v1_1/gbrozdev/image/upload", {
                method: "post",
                body: data
            })
                .then(res => res.json())
                .then(data => {



                    let url = 'https://res.cloudinary.com/gbrozdev/image/upload/v1662275322/' + data.public_id + '.png'
                    image = url;

                    alert('image added');


                })
        }
        return image;
    }

</script>